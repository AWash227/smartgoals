<article class="media">
  <figure class="media-left">
    <%= form_for [task.milestone, task] do |f| %>
      <%= f.hidden_field :body, value: task.body %>
      <%= f.check_box :complete, class: 'task-submit'%>
    <% end %>
  </figure>
  <div class="media-content">
    <div class = "content">
      <p>
        <%= link_to task, milestone_id: task.milestone do%>
          <%= task.body %>
        <% end %>
      </p>
    </div>
  </div>
  <figure class="media-right">
    <%= link_to edit_milestone_task_path(task.milestone, task) do%>
      <span class="icon">
        <%= fa_icon "edit"%>
      </span>
    <% end %>
    <%= link_to milestone_task_path(task.milestone, task), method: :delete do%>
      <span class="icon">
        <%= fa_icon "trash"%>
      </span>
    <% end %>
    <span class="tag is-light">6</span>
  </figure>
</article>